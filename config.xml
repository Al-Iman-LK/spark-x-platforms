<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sparkx.platforms" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Spark-X Platforms</name>
    <description>
        A comprehensive platform for online shopping, jobs, donations, and social services.
    </description>
    <author email="support@spark-x-platforms.com" href="https://spark-x-platforms.com">
        Spark-X Platforms Team
    </author>
    <content src="index.html" />
    
    <!-- Global preferences -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    
    <!-- iOS specific preferences -->
    <platform name="ios">
        <preference name="WKWebViewOnly" value="true" />
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#2563eb" />
        <preference name="StatusBarStyle" value="lightcontent" />
    </platform>
    
    <!-- Android specific preferences -->
    <platform name="android">
        <preference name="StatusBarBackgroundColor" value="#2563eb" />
        <preference name="Fullscreen" value="false" />
        <preference name="Orientation" value="portrait" />
    </platform>
    
    <!-- Allow access to external resources -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- Platform specific allow-intents -->
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
    <!-- Plugins -->
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-network-information" spec="^3.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="^3.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^6.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.5" />
    
    <!-- Icons -->
    <icon src="icons/icon-72x72.png" width="72" height="72" />
    <icon src="icons/icon-96x96.png" width="96" height="96" />
    <icon src="icons/icon-128x128.png" width="128" height="128" />
    <icon src="icons/icon-144x144.png" width="144" height="144" />
    <icon src="icons/icon-152x152.png" width="152" height="152" />
    <icon src="icons/icon-192x192.png" width="192" height="192" />
    <icon src="icons/icon-384x384.png" width="384" height="384" />
    <icon src="icons/icon-512x512.png" width="512" height="512" />
    
    <!-- iOS specific icons -->
    <platform name="ios">
        <icon src="icons/icon-152x152.png" width="152" height="152" />
        <icon src="icons/icon-192x192.png" width="192" height="192" />
    </platform>
    
    <!-- Android specific icons -->
    <platform name="android">
        <icon src="icons/icon-96x96.png" density="mdpi" />
        <icon src="icons/icon-144x144.png" density="hdpi" />
        <icon src="icons/icon-192x192.png" density="xhdpi" />
        <icon src="icons/icon-384x384.png" density="xxhdpi" />
        <icon src="icons/icon-512x512.png" density="xxxhdpi" />
    </platform>
</widget>
